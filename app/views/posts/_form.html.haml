= form_with(model: post, local: true, :builder => FormHelper::CustomFormHelper) do |form|
  .field
    = form.label :title
    = form.text_field :title

  .field
    = form.label :content
    = form.text_area :content

  .field
    = form.label :image
    = form.text_area :image
  .actions
    = form.submit
